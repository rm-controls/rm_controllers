<launch>
  <rosparam file="$(find rm_base)/config/actuator_coefficient.yaml" command="load" ns="rm_base"/>
  <rosparam file="$(find rm_chassis_controllers)/test/config/test_chassis.yaml" command="load"/>

  <rosparam file="$(find rm_chassis_controllers)/test/urdf/test_chassis.xacro" command="load" ns="robot_description"/>
  <!--    <rosparam file="$(find rm_gimbal_controllers)/test/test_gimbal.xacro" command="load" ns="robot_description"/>-->

  <node pkg="tf" type="static_transform_publisher" name=""
        args="0 0 0 0 0 0 1 world odom 500"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
        output="screen" args="
        rm_base/robot_state_controller
        rm_base/joint_state_controller
        rm_base/standard_chassis_controller
"/>

  <!--  <node name="rm_base" pkg="rm_base" type="rm_base" respawn="false"/>-->

</launch>